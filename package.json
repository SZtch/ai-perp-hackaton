{
  "name": "superai-perp",
  "version": "1.0.0",
  "private": true,
  "description": "Perpetual DEX with AI-powered risk management on TON blockchain",
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "scripts": {
    "ai:start": "cd ai && python -m uvicorn main:app --reload --port 8001",
    "build": "npm run build -w frontend && npm run build -w backend",
    "contracts:build": "npm run build -w contracts",
    "contracts:deploy": "npm run deploy -w contracts",
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "setup": "npm install && npm run contracts:build",
    "test": "npm run test -w contracts && npm run test -w backend"
  },
  "dependencies": {
    "@ton/core": "latest",
    "@ton/crypto": "latest",
    "@ton/ton": "latest",
    "@tonconnect/ui-react": "latest",
    "axios": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "lucide-react": "^0.454.0",
    "next": "16.0.0",
    "pg": "latest",
    "pg-native": "latest",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "concurrently": "^8.2.0",
    "postcss": "^8.5",
    "tailwindcss": "4.1.16",
    "typescript": "^5"
  }
}